<yas>
    <!-- deve definir-se um objeto para raiz da arvore, assim -->
    <!-- como o comprimento dos tres eixos (cilindros) -->
    <scene root="rootie" axis_length="5.0" />

    <views default="view" >
        <!-- tem de existir, pelo menos, uma vista de -->
        <!-- entre as seguintes (perspective ou ortho) -->
        <perspective id="prespective" near="0" far="0" angle="0">
            <from x="0" y="0" z="0" />
            <to x="0" y="0" z="0" />
        </perspective>
        <ortho id="ortho" near="0" far="0"
               left="0" right="0" top="0" bottom="0" />
    </views>

    <ambient>
        <ambient r="0.1" g="0.5" b="0.5" a="1.0" />
        <background r="0.2" g="0.1" b="0.4" a="0.3" />
    </ambient>

    <lights>
        <!-- Deve existir um ou mais blocos "omni" ou "spot" -->
        <!-- Os identificadores "id" nao podem ser repetidos -->
        <omni id="light01" enabled="0" >
            <location  x="1.0" y="1.0" z="1.0" w="1.0"/>             
            <ambient r="0.3" g="0.3" b="0.3" a="0.1"/>          
            <diffuse r="0.1" g="0.2" b="0.3" a="0.4"/>        
            <specular r="0.5" g="1.0" b="0.7" a="0.5"/>   

        </omni>
        
        <spot id="spot01" enabled="0" angle="2" exponent="1.0">
            <!-- atencao, "target" e' diferente de "direction" -->
            <target x="2.0" y="2.0" z="2.0" />
            <location  x="2.0" y="12.0" z="2.0" w="1.0" />             
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />          
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />   
        </spot>
    </lights>

    <textures>
        <!-- Deve existir um ou mais blocos "texture" -->
        <!-- Os identificadores "id" nao podem ser repetidos -->
        <texture id="newtexture" file="disk/something.jpg" />
        <texture id="newt" file="disk/some.jpg" />
    </textures>

    <materials>
        <!-- Deve existir um ou mais blocos "material" -->
        <!-- Os identificadores "id" nao podem ser repetidos -->
        <material id="somematerial" shininess = "0.3" >
            <emission r="0.3" g="0.3" b="0.3" a="0.3" />
            <ambient r="0.3" g="0.3" b="0.3" a="0.3" />
            <diffuse r="0.3" g="0.3" b="0.3" a="0.3" />
            <specular r="0.3" g="0.3" b="0.3" a="0.3" />
        </material>
    </materials>

    <transformations>
        <!-- Deve existir um ou mais blocos "transformation" -->
        <!-- Os identificadores "id" nao podem ser repetidos -->
        <!-- Os angulos sao expressos em graus -->
        <transformation id="transf1">
            <!-- instrucoes a usar sem limite nem ordem -->
            <!-- deve existir pelo menos uma transformacao -->
            <translate x="1" y="1" z="3" />
            <rotate axis="x" angle="30" />
            <translate x="1.5" y="1.5" z="0.6" />
            <scale x="1" y="1" z="1" />
        </transformation>

        <transformation id="transf2">
            <!-- instrucoes a usar sem limite nem ordem -->
            <!-- deve existir pelo menos uma transformacao -->
            <translate x="1" y="1" z="1" />
            <scale x="4" y="4" z="4" />
            <rotate axis="y" angle="20" />
        </transformation>
    </transformations>

    <primitives>
        <!-- Uma "primitive" e' uma primitiva e pode ser usada em nos folha -->
        <!-- Deve existir um ou mais blocos "primitive" -->
        <!-- Os identificadores "id" nao podem ser repetidos -->
        <primitive id="prim1">
            <!-- apenas pode existir UMA das seguintes tags: -->
            <!-- rectangle, triangle, cylinder, sphere, torus -->
            <!-- os parametros devem ser interpretados, genericamente, -->
            <!-- como em WebGL; o cilindro deve adicionalmente ter tampas -->
            <rectangle x1="2.0" y1="4.0" x2="4.0" y2="2.0" />
            <!-- <triangle x1="2" y1="4" z1="3"
            x2="4" y2="4" z2="3"
            x3="1" y3="2" z3="2" /> -->
            <!-- <cylinder base="3" top="3" height="3" slices="20" stacks="20" /> -->
            <!-- <sphere radius="3" slices="20" stacks="20" /> -->
        </primitive >

        <primitive id="prim2">
            <!-- apenas pode existir UMA das seguintes tags: -->
            <!-- rectangle, triangle, cylinder, sphere, torus -->
            <!-- os parametros devem ser interpretados, genericamente, -->
            <!-- como em WebGL; o cilindro deve adicionalmente ter tampas -->
            <!-- IMP: x1 < x2 | y1 > y2 -->
            <rectangle x1="0.5" y1="1.5" x2="1.5" y2="0.5" />
        </primitive >

    </primitives >

    <components>

        <component id="comp1">
            <!-- Uma "component" e' um objeto composto e pode ser -->
            <!-- usada em nos intermédios -->
            <!-- bloco "transformation" e' obrigatorio -->
            <transformation>
                <!-- deve conter uma referencia a uma das "transformation" -->
                <!-- declaradas anteriormente -->
                <transformationref id="transf1" />
                <!-- ou, ALTERNATIVAMENTE, transformacoes explicitas, -->
                <!-- usando zero ou mais das instrucoes seguintes, sem -->
                <!-- limite nem ordem -->
                <!-- ex: bloco transformation pode ficar sem conteudo -->
               <!-- <translate x="1.0" y="1.0" z="1.0" />
                <rotate axis="x" angle="1.0" />
                <scale x="1.0" y="1.0" z="1.0" /> -->
            </transformation>
            <!-- declaracao obrigatoria de pelo menos um material; -->
            <!-- o material id="inherit", mantem (herda) material do "pai" -->
            <!-- se varios materiais declarados, o default e' o -->
            <!-- primeiro material; de cada vez que se pressione a tecla m/M, -->
            <!-- o material muda para o proximo material da lista; do -->
            <!-- ultimo material da lista volta ao primeiro -->
            <materials>
                <material id="supermat" shininess = "0.3" >
                    <emission r="0.3" g="0.3" b="0.3" a="0.3" />
                    <ambient r="0.3" g="0.3" b="0.3" a="0.3" />
                    <diffuse r="0.3" g="0.3" b="0.3" a="0.3" />
                    <specular r="0.3" g="0.3" b="0.3" a="0.3" />
                </material>
            </materials>
            <!-- declaracao obrigatoria de texture -->
            <!-- id="inherit" mantem (herda) a textura do objecto "pai" -->
            <!-- id="none" remove a textura recebida do pai -->
            <!-- a textura declarada sobrepoe a textura recebida do -->
            <!-- objecto "pai" -->
            <!-- length_s e length_t sao fatores de escala de textura:-->
            <!-- Exemplo length_s=3.0: uma ocorrencia da textura, em -->
            <!-- comprimento, deve cobrir um comprimento igual -->
            <!-- a 3 unidades; -->
            <!-- Exemplo length_t=0.4, uma ocorrencia da textura, em -->
            <!-- largura, deve cobrir uma largura igual a 0.4 unidades. -->
            <!-- E' permitido que objetos afetados por Transf. Geometr. -->
            <!-- do tipo escalamento violem esta regra. -->
            <!-- Nao e' necessario aplicar fatores de escala em -->
            <!-- quadricas (esfera, cilindro...) -->
            <texture id="atexture" length_s="43" length_t="23" />
            <!-- bloco "children" obrigatorio num "component" -->
            <children>
                <!-- deve existir uma ou mais tags "componentref" e/ou -->
                <!-- "primitiveref", identificando outros -->
                <!-- componentes ou primitivas -->
                <componentref id="comp2"/>
                <primitiveref id="prim1" />
            </children>
        </component>

        <component id="comp2">
            <!-- Uma "component" e' um objeto composto e pode ser -->
            <!-- usada em nos intermédios -->
            <!-- bloco "transformation" e' obrigatorio -->
            <transformation>
                <!-- deve conter uma referencia a uma das "transformation" -->
                <!-- declaradas anteriormente -->
               <!-- <transformationref id="transf2" />  -->
                <!-- ou, ALTERNATIVAMENTE, transformacoes explicitas, -->
                <!-- usando zero ou mais das instrucoes seguintes, sem -->
                <!-- limite nem ordem -->
                <!-- ex: bloco transformation pode ficar sem conteudo -->
                <translate x="5" y="5" z="5" />
                <translate x="-2" y="-2" z="-3" />
                <rotate axis="z" angle="10" />
                <scale x="3" y="3" z="3" />
            </transformation>
            <!-- declaracao obrigatoria de pelo menos um material; -->
            <!-- o material id="inherit", mantem (herda) material do "pai" -->
            <!-- se varios materiais declarados, o default e' o -->
            <!-- primeiro material; de cada vez que se pressione a tecla m/M, -->
            <!-- o material muda para o proximo material da lista; do -->
            <!-- ultimo material da lista volta ao primeiro -->
            <materials>
                <material id="othermat" shininess = "0.3" >
                    <emission r="0.3" g="0.3" b="0.3" a="0.3" />
                    <ambient r="0.3" g="0.3" b="0.3" a="0.3" />
                    <diffuse r="0.3" g="0.3" b="0.3" a="0.3" />
                    <specular r="0.3" g="0.3" b="0.3" a="0.3" />
                </material>
            </materials>
            <!-- declaracao obrigatoria de texture -->
            <!-- id="inherit" mantem (herda) a textura do objecto "pai" -->
            <!-- id="none" remove a textura recebida do pai -->
            <!-- a textura declarada sobrepoe a textura recebida do -->
            <!-- objecto "pai" -->
            <!-- length_s e length_t sao fatores de escala de textura:-->
            <!-- Exemplo length_s=3.0: uma ocorrencia da textura, em -->
            <!-- comprimento, deve cobrir um comprimento igual -->
            <!-- a 3 unidades; -->
            <!-- Exemplo length_t=0.4, uma ocorrencia da textura, em -->
            <!-- largura, deve cobrir uma largura igual a 0.4 unidades. -->
            <!-- E' permitido que objetos afetados por Transf. Geometr. -->
            <!-- do tipo escalamento violem esta regra. -->
            <!-- Nao e' necessario aplicar fatores de escala em -->
            <!-- quadricas (esfera, cilindro...) -->
            <texture id="someothertexutre" length_s="43" length_t="23" />
            <!-- bloco "children" obrigatorio num "component" -->
            <children>
                <!-- deve existir uma ou mais tags "componentref" e/ou -->
                <!-- "primitiveref", identificando outros -->
                <!-- componentes ou primitivas -->
                <primitiveref id="prim2" />
            </children>
        </component>

    </components>

</yas>