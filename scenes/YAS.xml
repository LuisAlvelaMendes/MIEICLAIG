<yas>

    <scene root="root" axis_length="5.0" />

    <views default="view" >
 
        <perspective id="prespective" near="0" far="0" angle="0">
            <from x="0" y="0" z="0" />
            <to x="0" y="0" z="0" />
        </perspective>
        <ortho id="ortho" near="0" far="0"
               left="0" right="0" top="0" bottom="0" />
    </views>

    <ambient>
        <ambient r="0.0" g="0.3" b="0.9" a="1" />
        <background r="1" g="1" b="1" a="0.1" />
    </ambient>

    <lights>
  
        <omni id="light01" enabled="0" >
            <location  x="2.0" y="2.0" z="2.0" w="1.0"/>             
            <ambient r="0.3" g="0.3" b="0.3" a="0.1"/>          
            <diffuse r="0.1" g="0.2" b="0.3" a="0.4"/>        
            <specular r="0.9" g="1.0" b="0.7" a="0.1"/>   
        </omni>

        <omni id="light02" enabled="0" >
            <location  x="-2.0" y="2.0" z="-2.0" w="1.0"/>             
            <ambient r="0.3" g="0.3" b="0.3" a="0.1"/>          
            <diffuse r="0.1" g="0.2" b="0.3" a="0.4"/>        
            <specular r="0.9" g="1.0" b="0.7" a="0.1"/>   
        </omni>

        <omni id="light03" enabled="0" >
            <location  x="2.0" y="2.0" z="-2.0" w="1.0"/>             
            <ambient r="0.3" g="0.3" b="0.3" a="0.1"/>          
            <diffuse r="0.1" g="0.2" b="0.3" a="0.4"/>        
            <specular r="0.9" g="1.0" b="0.7" a="0.1"/>   
        </omni>
        
        <spot id="spot01" enabled="0" angle="2" exponent="1.0">

            <target x="2.0" y="2.0" z="2.0" />
            <location  x="3.0" y="2.0" z="3.0" w="1.0" />             
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />          
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />   
        </spot>
    </lights>

    <textures>
        <texture id="wood" file="scenes/images/trunk-image.jpg"/>
        <texture id="newt" file="scenes/images/leaves.jpg"/>
        <texture id="wood2" file="scenes/images/wood2.jpg"/>
        <texture id="vidral" file="scenes/images/bank.jpg"/>
    </textures>

    <materials>
  
        <material id="somematerial" shininess = "0.3" >
            <emission r="0.3" g="0.3" b="0.3" a="0.3" />
            <ambient r="0.3" g="1.0" b="0.3" a="0.3" />
            <diffuse r="0.3" g="0.3" b="0.3" a="0.3" />
            <specular r="0.3" g="0.3" b="0.3" a="0.3" />
        </material>

        <material id="othermat" shininess = "0.3" >
            <emission r="1.0" g="0.3" b="0.3" a="0.3" />
            <ambient r="0.3" g="0.3" b="0.3" a="0.3" />
            <diffuse r="0.3" g="0.3" b="0.3" a="0.3" />
            <specular r="0.3" g="0.3" b="0.3" a="0.3" />
        </material>

        <material id="supermat" shininess = "0.3" >
            <emission r="1.0" g="0.3" b="0.3" a="0.3" />
            <ambient r="0.3" g="1.0" b="1.0" a="0.3" />
            <diffuse r="0.3" g="0.3" b="0.2" a="0.3" />
            <specular r="0.3" g="0.3" b="0.3" a="0.3" />
        </material>
        
    </materials>

    <transformations>

        <transformation id="transf1">
 
            <translate x="0" y="0" z="0" />
            <rotate axis="x" angle="0" />
            <scale x="1" y="1" z="1" />
        </transformation>

        <transformation id="transf2">
 
            <translate x="1" y="1" z="1" />
            <rotate axis="y" angle="20" />
            <scale x="4" y="4" z="4" />
        </transformation>
    </transformations>

    <primitives>


        <primitive id="myRectangle">

            <rectangle x1="2.0" y1="4.0" x2="4.0" y2="3.0" />    
        </primitive >

        <primitive id="myTriangle">
            <triangle x1="0" y1="0" z1="0"
                      x2="0" y2="2" z2="0"
                      x3="0" y3="2" z3="2" />
        </primitive >

        <primitive id="myCylinder">
            <cylinder base="2" top="3" height="3" slices="20" stacks="20" />
        </primitive>

        <primitive id="mySphere">
            <sphere radius="6" slices="20" stacks="20" />
        </primitive>

    </primitives >

    <components>

        <component id="root">

            <transformation>

                <transformationref id="transf1" />

            </transformation>

            <materials>
                <material id="supermat"/>
            </materials>

            <texture id="wood" length_s="2" length_t="0.5" />

            <children>

                <componentref id="myRoomWallRight"/>
                <componentref id="myRoomWallLeft"/>
                <componentref id="myRoomFloor"/>
                <componentref id="mySemiSphere"/>
                <componentref id="myTable"/>
                <componentref id="myTriangle"/>
            </children>
        </component>

        <!-- My Primitives -->

        <component id="myTriangle">

            <transformation>>
                <translate x="2" y="0.5" z="2" />
                <rotate axis="y" angle="-180" />
                <scale x="0.1" y="1" z="2" />
            </transformation>

            <materials>
                <material id="othermat" />
            </materials>

            <texture id="inherit" length_s="2" length_t="2" />

            <children>
                <primitiveref id="myTriangle" />
            </children>
        </component>

        <component id="myCylinder">

            <transformation>
                <translate x="4" y="-1" z="0" />
                <rotate axis="z" angle="0" />
                <scale x="1" y="1" z="4" />
            </transformation>
 
            <materials>
                <material id="othermat" />
            </materials>

            <texture id="newt" length_s="2" length_t="0.5" />

            <children>
                <primitiveref id="myCylinder" />
            </children>
        </component>

        <component id="mySemiSphere">

            <transformation>
                <translate x="11" y="4" z="2" />
                <rotate axis="x" angle="-90" />
                <scale x="1" y="1" z="1" />
            </transformation>

            <materials>
                <material id="othermat" />
            </materials>

            <texture id="newt" length_s="2" length_t="0.5" />

            <children>
                <primitiveref id="mySphere" />
            </children>
        </component>

        <component id="myCubeQuad">

            <transformation>
    
            </transformation>
 
            <materials>
                <material id="inherit" />
            </materials>
   
            <texture id="wood" length_s="43" length_t="23" />
 
            <children>
                <componentref id="myWall1"/>
                <componentref id="myWall2"/>
                <componentref id="myWall3"/>
                <componentref id="myWall4"/>
                <componentref id="myWall5"/>
                <componentref id="myWall6"/>
            </children>
        </component>

        <!-- Room Walls -->

        <component id="myRoomWallRight">

            <transformation>
                <scale x="4" y="8" z="4" />
                <translate x="-8" y="-24" z="0"/>
            </transformation> 

            <materials>
                <material id="othermat" />
            </materials>

            <texture id="inherit" length_s="100" length_t="200" />

            <children>
                <primitiveref id="myRectangle" />
            </children>
        </component>

        <component id="myRoomWallLeft">

            <transformation>
                <scale x="4" y="8" z="4" />
                <translate x="0" y="-24" z="16"/>
                <rotate axis="y" angle="90"/>
            </transformation>

            <materials>
                <material id="supermat" />
            </materials>
  
            <texture id="newt" length_s="2" length_t="0.5" />
  
            <children>
                <primitiveref id="myRectangle" />
            </children>
        </component>

        <component id="myRoomFloor">

            <transformation>
                <translate x="-8" y="0" z="32" />
                <rotate axis="x" angle="-90" />
                <scale x="4" y="8" z="4" />
            </transformation>
 
            <materials>
                <material id="somematerial" />
            </materials>

            <texture id="newt" length_s="2" length_t="0.5" />
      
            <children>
                <primitiveref id="myRectangle" />
            </children>
        </component>

        <!-- Room Walls end -->

        <component id="myWall1">
  
            <transformation>

                <translate x="-4" y="8" z="0" />
                <rotate axis="x" angle="180" />
                <scale x="1" y="2" z="1" />
            </transformation>

            <materials>
                <material id="inherit"/>
            </materials>

            <texture id="wood2" length_s="2" length_t="0.5" />
   
            <children>

                <primitiveref id="myRectangle" />
            </children>
        </component>

        <component id="myWall2">

            <transformation>
    
                <translate x="-4" y="-6" z="2" />
                <rotate axis="z" angle="0" />
                <scale x="1" y="2" z="1" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>
  
            <texture id="newt" length_s="2" length_t="0.5" />

            <children>

                <primitiveref id="myRectangle" />
            </children>
        </component>

        <component id="myWall3">

            <transformation>

                <translate x="-4" y="2" z="8" />
                <rotate axis="x" angle="-90" />
                <scale x="1" y="2" z="1" />
            </transformation>
      
            <materials>
                <material id="inherit" />
            </materials>
   
            <texture id="inherit" length_s="2" length_t="0.5" />

            <children>

                <primitiveref id="myRectangle" />
            </children>
        </component>

        <component id="myWall4">

            <transformation>

                <translate x="0" y="-6" z="4" />
                <rotate axis="y" angle="90" />
                <scale x="1" y="2" z="1" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="newt" length_s="2" length_t="0.5" />

            <children>

                <primitiveref id="myRectangle" />
            </children>
        </component>

        <component id="myWall5">
 
            <transformation>
 
                <translate x="-2" y="-6" z="-2" />
                <rotate axis="y" angle="-90" />
                <scale x="1" y="2" z="1" />
            </transformation>
   
            <materials>
                <material id="inherit" />
            </materials>
    
            <texture id="newt" length_s="2" length_t="0.5" />

            <children>

                <primitiveref id="myRectangle" />
            </children>
        </component>

        <component id="myWall6">

            <transformation>

                <translate x="-4" y="0" z="-6" />
                <rotate axis="x" angle="90" />
                <scale x="1" y="2" z="1" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="newt" length_s="2" length_t="0.5" />

             <children>

                <primitiveref id="myRectangle" />
            </children>
        </component>

        <!-- Table -->

        <component id="myTable">

            <transformation>
            
            </transformation>

            <materials>
                <material id="supermat" />
            </materials>

            <texture id="wood" length_s="2" length_t="0.5" />

            <children>
                <componentref id="leg1" />
                <componentref id="leg2" />
                <componentref id="leg3" />
                <componentref id="leg4" />
                <componentref id="topo" />
            </children>
        </component>

        <component id="leg1">

            <transformation>
                <translate x="10" y="1.8" z="4" />
                <rotate axis="x" angle="90" />
                <scale x="0.3" y="0.3" z="4.5" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="2" length_t="0.5" />
  
            <children>

                <primitiveref id="myCylinder" />
            </children>
        </component>

        <component id="leg2">

            <transformation>
        
                <translate x="10" y="1.8" z="1" />
                <rotate axis="x" angle="90" />
                <scale x="0.3" y="0.3" z="4.5" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="newt" length_s="2" length_t="0.5" />

            <children>

                <primitiveref id="myCylinder" />
            </children>
        </component>

        <component id="leg3">

            <transformation>

                <translate x="12" y="1.8" z="4" />
                <rotate axis="x" angle="90" />
                <scale x="0.3" y="0.3" z="4.5" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="newt" length_s="2" length_t="0.5" />
    
            <children>

                <primitiveref id="myCylinder" />
            </children>
        </component>

        <component id="leg4">
  
            <transformation>

                <translate x="12" y="1.8" z="1" />
                <rotate axis="x" angle="90" />
                <scale x="0.3" y="0.3" z="4.5" />
            </transformation>
     
            <materials>
                <material id="inherit" />
            </materials>

            <texture id="newt" length_s="2" length_t="0.5" />
   
            <children>

                <primitiveref id="myCylinder" />
            </children>
        </component>

        <component id="topo">
            <transformation>
                <translate x="12.5" y="2" z="0.6" />
                <rotate axis="x" angle="90" />
                <scale x="1.5" y="1.9" z="0.2" />
            </transformation>
            <materials>
                <material id="othermat" />
            </materials>
            <texture id="newt" length_s="2" length_t="0.5" />
            <children>
                <componentref id="myCubeQuad" />
            </children>
        </component>

        <!-- Table end -->

    </components>

</yas>